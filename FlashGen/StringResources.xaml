<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  App Strings  -->
    <sys:String x:Key="AppTitle">FlashGen – AI Flashcard Generator</sys:String>
    <sys:String x:Key="DropZonePrompt">Drag and drop a .txt file here</sys:String>
    <sys:String x:Key="GenerateButtonText">Generate Flashcards</sys:String>

    <sys:String x:Key="PromptLabelText">Optional: Add extra instruction to guide the flashcard style</sys:String>
    <sys:String x:Key="PromptDescriptionText">Prompt will always start with: 'Convert the following text into flashcards in Q&amp;A format.'</sys:String>
</ResourceDictionary>